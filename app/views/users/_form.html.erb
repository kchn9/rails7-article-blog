<%= form_with(model: @user, url: new ? signup_path : user_path(@user), data: { turbo: false }, class: "text-center" ) do |form| %>
  <fieldset>
    <legend>
      <h1>
      <%= "Creating new user" if @user.new_record? %>
      </h1>
    </legend>
    <div class="py-2 my-2">
      <%= form.label :username, class: "form-label my-3" %>
      <br>
      <%= form.text_field :username, size:32, autofocus:true, class: "form-control mx-auto w-25", placeholder: "Your username" %>
    </div>
    <div class="py-2 my-2">
      <%= form.label :email, class: "form-label my-3" %>
      <br>
      <%= form.email_field :email, size:32, class: "form-control mx-auto w-25", placeholder: "Your email" %>
    </div>
    <div class="py-2 my-2">
      <%= form.label :password, class: "form-label my-3" %>
      <br>
      <%= form.password_field :password, size:32, autofocus:true, class: "form-control mx-auto w-25", placeholder: "Your password" %>
    </div>
  </fieldset>
  <div class="mt-4">
    <%= form.submit @user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary"%>
    <%= link_to "Back", articles_path, class: "btn btn-outline-danger mx-auto" %>
  </div>
<% end %>

