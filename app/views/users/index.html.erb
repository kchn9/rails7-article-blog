<main>
    <h1 class="display-4 p-4 m-4 text-center" >
      User list
    </h1>
  <ul class="text-center list-group">
    <% @users.each do |user| %>
      <li class="list-group-item">
        <div>
          <strong>
            <%= link_to user.username, user, class: "lead" %>
          </strong>
          <div class="py-2">
            <% if logged_in? && current_user.admin? %>
              <%= link_to "Delete", user_path(user), class: "p-2 my-1 mx-auto body btn-outline-danger text-decoration-none", data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }%>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</main>
<nav class="px-4 py-2 my-4 text-center">
  <%= link_to "Back to articles list", articles_path, class: "btn btn-outline-primary" %>
</nav>
