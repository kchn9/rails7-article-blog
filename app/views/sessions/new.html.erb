<%= render 'shared/nav' %>
<main>
  <header class="text-center my-2 py-2">
    <h1>
      Log in
    </h1>
  </header>
  <%= form_with(scope: :session, url: login_path , data: { turbo: false }, class: "text-center" ) do |form| %>
    <fieldset>
      <div class="py-2 my-2">
        <%= form.label :login, class: "my-3" %>
        <br>
        <%= form.email_field :login, size:32, placeholder: "Enter your email" %>
      </div>
      <div class="py-2 my-2">
        <%= form.label :password, class: "my-3" %>
        <br>
        <%= form.password_field :password, size:32, autofocus:true, placeholder: "Enter your password" %>
      </div>
    </fieldset>
    <%= form.submit "Log in", class: "btn btn-primary my-4"%>
  <% end %>
</main>
<nav class="px-4 py-2 my-4 text-center">
  <%= link_to "Back to articles list", root_path %>
</nav>
