<nav class="p-3 bg-dark text-white">
  <section class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <%= link_to "ARTICLE BLOG", root_path, class: "px-2 text-white" %>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
        <%= link_to "Home", root_path, class: "nav-link px-2 text-white" %>
        <%= link_to "Create new article", new_article_path, class: "nav-link px-2 text-secondary" %>
        <%= link_to "Create new user", signup_path, class: "nav-link px-2 text-secondary" %>
      </ul>
    </div>
  </section>
</nav>
<main>
  <section class="py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Articles</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead mb-4">Feel free to check our articles</p>
    </div>
  </div>
  </section>
  <section class="my-5 text-center">
    <dl>
    <% @articles.each do |a| %>
      <article>
        <dt>
          <h2>
            <%= a.title %>
          </h2>
        </dt>
        <dd>
          <i>
            <%= a.content %>
          </i>
          <section class="py-2 my-2">
            <ul class="px-0 mx-0">
                <%= link_to "Show", article_path(a) %> |
                <%= link_to "Edit", edit_article_path(a) %> |
                <%= link_to "Delete", article_path(a), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %>
            </ul>
          </section>
        </dd>
      </article>
    <% end %>
  </dl>
  </section>

</main>
<aside>
  <section class="px-4 py-5 text-size-16 text-center">
        <%= link_to "Create new article", new_article_path %>
  </section>
</aside>


