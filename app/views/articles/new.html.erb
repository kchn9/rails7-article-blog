<main class="text-center">
  <h1>
  New Article
  </h1>
  <%= render 'shared/errors', obj: @article %>
  <%= form_with(scope: :article, url: articles_path, data: { turbo: false }) do |form| %>
    <%= render partial: 'form', locals: { form: form } %>
    <br>
    <%= form.submit "Create article", class: "btn btn-primary my-0" %>
  <% end %>
</main>
<br>
<aside class="text-center py-3">
  <section>
    <%= link_to "Back to article list", root_path %>
  </section>
</aside>
